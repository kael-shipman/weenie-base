{
  "name": "weenie-base",
  "version": "1.0.0",
  "description": "The base package for Weenie, an aggressively unopinionated Typescript microservices micro-framework",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepublishOnly": "tsc"
  },
  "author": "Kael Shipman<kael.shipman@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/kael-shipman/weenie-base.git",
  "dependencies": {
    "fs": "^0.0.1-security",
    "runtypes": "^4.0.3",
    "ts-simple-interfaces": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^8.10.58",
    "@types/sinon": "^4.3.3",
    "husky": "^1.3.1",
    "prettier": "^1.16.0",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.2"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
